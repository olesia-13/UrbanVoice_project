<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="0dp">

    <LinearLayout
        android:background="@drawable/route_card_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/route_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_bus" />

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/route_type_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автобус №111"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#201010" />

        <TextView
            android:id="@+id/route_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ст. м. Площа українських героїв - пл. Дарницька"
            android:textSize="12sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#201010"/>
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>